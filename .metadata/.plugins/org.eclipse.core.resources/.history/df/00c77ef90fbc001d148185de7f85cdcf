package com.adi.algo.sorting;
 /*
1: for i =2 to n
2: 	key = A[i]
3: 	j = i-1
4: 	while j  > 0 and A[j] > key
5: 		A[j+1]= A[j]
6: 		j = j-1
7: 	A[j+1] = key 
*/

public class InsertionSort {

	public static void main(String[] args) {
		int[] arr = {8,7,3,42,1};
		
		InsertionSort ib = new InsertionSort();
		System.out.println("Before Sorting : "  + InsertionSort.printArray(arr));
		ib.sort(arr);
		
	}
	
	/* A utility function to print array of size n*/
    static void printArray(int arr[])
    {
        int n = arr.length;
        for (int i = 0; i < n; ++i)
            System.out.print(arr[i] + " ");
 
        System.out.println();
    }
    
    void sort(int[] arr) {
    	int size = arr.length;
    	for(int i=1; i < size; ++i) {
    		int j = i -1;
    		int key = arr[i];
    		
    		while(j >= 0 && arr[j] > key) {
    			arr[j+1] = arr[j];
    			j = j-1;
    		}
    		
    		arr[j+1] = key;
    	}
    }

}
